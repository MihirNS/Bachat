<UserControl x:Class="Bachat.Pages.PostOfficeSchemes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <!-- TODO: set @SelectedSource -->
        <mui:ModernTab Layout="List" SelectedSource="/Pages/PostOffices.xaml">
            <mui:ModernTab.Links>
                <!-- TODO: set @Source -->
                <mui:Link DisplayName="Post Offices" Source="/Pages/PostOffices.xaml"/>
                <mui:Link DisplayName="Schemes" Source="/Pages/Schemes.xaml"/>
                <mui:Link DisplayName="Update Scheme Rates" Source="/Pages/UpdateSchemeRates.xaml" />
                <mui:Link DisplayName="Agent File" Source="/Pages/AgentFile.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
