<Window x:Class="Bachat.Initialize"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  Title="" WindowStyle="None" Width="400" Height="200" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True">
    <Grid Style="{StaticResource ContentRoot}">
        <DockPanel>
            <StackPanel DockPanel.Dock="Top">
                <Path Fill="MediumBlue" x:Name="icon" StrokeThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="39.572" Stretch="Fill" Width="39.571" Data="{StaticResource ApplicationIconData}">
                </Path>
                <TextBlock Text="Post Office Bachat" FontSize="36" Height="54" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15,0,0,0" />
                <TextBlock Text="Made with ❤ by Mihir Shanishchara" FontSize="15" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15,0,0,0" />
            </StackPanel>
            <ProgressBar Minimum="0" Maximum="1" Height="16" IsIndeterminate="True" Margin="0,10,0,11" Width="342" />

        </DockPanel>
    </Grid>
</Window>
